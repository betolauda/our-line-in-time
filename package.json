{
  "name": "our-line-in-time",
  "version": "1.0.0",
  "description": "Open-source personal and family memory preservation platform",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:analyze": "turbo build:analyze",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "performance:check": "echo '🔍 Checking performance metrics...' && curl -s http://localhost:3001/api/performance || echo '⚠️ API not running - start with npm run dev'"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "playwright": "^1.55.0",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@esbuild/linux-x64": "^0.25.9"
  }
}
